@model WebOperaciones.Models.BusModel

@{
    ViewBag.Title = "Bus";
}

<div class="container" style="margin-top: 135px;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="choferes.html">Choferes</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Buses", "Index", "Bus", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="produccion.html">Producción</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="administrativo.html">Administrativo</a>
                </li>
            </ul>
        </div>
    </nav>
</div>
<!-- cuerpo -->
<div class="container">
    <div class="row" style="margin-top: 25px;">
        <div class="col-lg-12">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Crear Autobuses</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Listar Autobuses</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                @if (@Model.Respuesta != "")
                {
                    <div class="alert alert-success alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Correcto!</strong> @Model.Respuesta
                    </div>
                }
                @if (@Model.Error != "")
                {
                    <div class="alert alert-danger alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Error!</strong> @Model.Error
                    </div>
                }
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <form style="margin-top: 40px;">
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label for="inputEmail4">Id</label>
                                <input type="number" class="form-control" id="txtId" placeholder="" value="@Model.Bus.Id">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputEmail4">Número Placa</label>
                                <input type="text" class="form-control" id="txtPlaca" placeholder="" value="@Model.Bus.Placa">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Clase</label>
                                <input type="text" class="form-control" id="txtClase" placeholder="" value="@Model.Bus.Clase">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Marca</label>
                                <input type="text" class="form-control" id="txtMarca" placeholder="" value="@Model.Bus.Marca">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Modelo</label>
                                <input type="text" class="form-control" id="txtModelo" placeholder="" value="@Model.Bus.Modelo">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Color</label>
                                <input type="text" class="form-control" id="txtColor" placeholder="" value="@Model.Bus.Color">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Motor</label>
                                <input type="number" class="form-control" id="txtMotor" placeholder="" value="@Model.Bus.Motor">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Número Asientos</label>
                                <input type="number" class="form-control" id="txtAsientos" placeholder="" value="@Model.Bus.Asientos">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Número Puertas</label>
                                <input type="number" class="form-control" id="txtPuertas" placeholder="" value="@Model.Bus.Puertas">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Fecha Inscripción</label>
                                <input type="date" class="form-control" id="txtFecInscripcion" placeholder="" value="@Model.Bus.FeInscripcion.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Año Fabricación</label>
                                <input type="number" class="form-control" id="txtAnio" placeholder="" value="@Model.Bus.Año">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Estado</label>
                                <input type="text" class="form-control" id="txtEstado" placeholder="" value="@Model.Bus.Estado">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <input type="button" class="btn btn-danger btn-block" id="btnLimpiar" value="Limpiar" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" class="btn btn-primary btn-block" id="btnAceptar" value="Aceptar" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" class="btn btn-warning btn-block" id="btnEnviarCorreo" value="Enviar Correo" />
                            </div>
                        </div>
                    </form>

                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    @Html.Partial("ListaPartial", Model.Buses)
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        listarBuses();
    });
    $("#btnLimpiar").click(function () {
        limpiar();
    });

    $("#btnAceptar").click(function () {
        grabarBus();
    });

    $("#btnEnviarCorreo").click(function () {
        enviarCorreo();
    });

    function listarBuses() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ListarDataList", "Bus")',
            data: {},
            contentType: "application/json;charset=UTF-8",
            datatype: "json",
            async: true,
            traditional: true,
            success: function (data) {
                $("#IndexPartialDiv").html("");
                $("#IndexPartialDiv").html(data);
            },
            error: function (request, status, error) {
                if (request.status == 401) {
                    document.location.href = parameterData.urlError;
                }
                if (request.status == 500) {

                    alert(error);
                }
                if (request.status == 401) {
                    document.location.href = CmpGlobalVariableUrl401;
                }
            }
        });
    }

    function grabarBus() {

        $.ajax({
        url: '@Url.Action("Grabar", "Bus")',
        data: JSON.stringify({
            id: $("#txtId").val(),
            placa: $("#txtPlaca").val(),
            clase: $("#txtClase").val(),
            marca: $("#txtMarca").val(),
            modelo: $("#txtModelo").val(),
            color: $("#txtColor").val(),
            motor: $("#txtMotor").val(),
            asientos: $("#txtAsientos").val(),
            puertas: $("#txtPuertas").val(),
            fecinscripcion: $("#txtFecInscripcion").val(),
            anio: $("#txtAnio").val(),
            estado: $("#txtEstado").val(),
        }),
        type: "POST",
        cache: false,
        async: true,
        contentType: "application/json;charset=UTF-8",
        datatype: "json",
        success: function (data) {
            if (data == "Success") {
                //listarBuses();
                //limpiar();
                document.location.href = '@Url.Action("Index", "Bus")';
            }
            else {
                alert(data);
            }
        },
        error: function (request, status, error) {
            if (request.status == 500) {

                alert(error);
            }
            if (request.status == 401) {
                document.location.href = CmpGlobalVariableUrl401;
            }
        }
    });
    }

    function enviarCorreo() {

        $.ajax({
            url: '@Url.Action("EnviarCorreo", "Bus")',
            data: JSON.stringify({
                correo: 'miriandvs@gmail.com',
                asunto: 'WEB OPERACIONES: CHOFER',
                mensaje: 'Solicitud aprobada'
            }),
            type: "POST",
            cache: false,
            async: true,
            contentType: "application/json;charset=UTF-8",
            datatype: "json",
            success: function (data) {
                if (data == "Success") {
                    alert('Correo enviado');
                }
                else {
                    alert(data);
                }
            },
            error: function (request, status, error) {
                if (request.status == 500) {

                    alert(error);
                }
                if (request.status == 401) {
                    document.location.href = CmpGlobalVariableUrl401;
                }
            }
        });
    }

    function limpiar() {
        $("#txtId").val('');
        $("#txtPlaca").val('');
        $("#txtClase").val('');
        $("#txtMarca").val('');
        $("#txtModelo").val('');
        $("#txtColor").val('');
        $("#txtMotor").val('');
        $("#txtAsientos").val('');
        $("#txtPuertas").val('');
        $("#txtFecInscripcion").val('');
        $("#txtAnio").val('');
        $("#txtEstado").val('');
    }

</script>