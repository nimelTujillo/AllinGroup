@model WebOperaciones.Models.ConductorModel

@{
    ViewBag.Title = "Conductor";
}

<div class="container" style="margin-top: 135px;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Conductores", "Index", "Conductor", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Buses", "Index", "Bus", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Producción", "Index", "Produccion", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
</div>
<!-- cuerpo -->
<div class="container">
    <div class="row" style="margin-top: 25px;">
        <div class="col-lg-12">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Crear Conductores</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Listar Conductores</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                @if (@Model.Respuesta != "")
                {
                    <div class="alert alert-success alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Correcto!</strong> @Model.Respuesta
                    </div>
                }
                @if (@Model.Error != "")
                {
                    <div class="alert alert-danger alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Error!</strong> @Model.Error
                    </div>
                }
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <form style="margin-top: 40px;">
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label for="inputEmail4">Id</label>
                                <input type="number" class="form-control" id="txtId" placeholder="" value="@Model.Conductor.dni_conductor"/>
                            </div>
                            <div class="form-group col-md-2">
                                <label for="inputEmail4">DNI</label>
                                <input type="number" class="form-control" id="txtDni" placeholder="" value="@Model.Conductor.dni_conductor">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputEmail4">Nombres</label>
                                <input type="text" class="form-control" id="txtNombres" placeholder="" value="@Model.Conductor.des_nombres">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Apellidos</label>
                                <input type="text" class="form-control" id="txtApellidos" placeholder="" value="@Model.Conductor.des_apellido">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Fecha Inscripción</label>
                                <input type="date" class="form-control" id="txtFecIngreso" placeholder="" value="@Model.Conductor.fecha_ingreso">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Categoria</label>
                                <input type="text" class="form-control" id="txtCategoria" placeholder="" value="@Model.Conductor.categoria_licencia">
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Nro Licencia</label>
                                <input type="number" class="form-control" id="txtNroLicencia" placeholder="" value="@Model.Conductor.nro_licencia">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Estado</label>
                                <input type="text" class="form-control" id="txtEstado" placeholder="" value="@Model.Conductor.tx_estado">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Dirección</label>
                                <input type="text" class="form-control" id="txtDireccion" placeholder="" value="@Model.Conductor.direccion">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <input type="button" class="btn btn-danger btn-block" id="btnLimpiar" value="Limpiar" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" class="btn btn-primary btn-block" id="btnAceptar" value="Aceptar" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" class="btn btn-warning btn-block" id="btnEnviarCorreo" value="Enviar Correo" />
                            </div>
                        </div>
                    </form>

                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    @Html.Partial("ListaPartial", Model.Conductores)
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        listarConductores();
    });
    $("#btnLimpiar").click(function () {
        limpiar();
    });

    $("#btnAceptar").click(function () {
        grabarConductor();
    });
    $("#btnEnviarCorreo").click(function () {
        enviarCorreo();
    });

    function listarConductores() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ListarDataList", "Conductor")',
            data: {},
            contentType: "application/json;charset=UTF-8",
            datatype: "json",
            async: true,
            traditional: true,
            success: function (data) {
                $("#IndexPartialDiv").html("");
                $("#IndexPartialDiv").html(data);
            },
            error: function (request, status, error) {
                if (request.status == 401) {
                    document.location.href = parameterData.urlError;
                }
                if (request.status == 500) {

                    alert(error);
                }
                if (request.status == 401) {
                    document.location.href = CmpGlobalVariableUrl401;
                }
            }
        });
    }

    function enviarCorreo() {

        $.ajax({
            url: '@Url.Action("EnviarCorreo", "Bus")',
            data: JSON.stringify({
                correo: 'miriandvs@gmail.com',
                asunto: 'WEB OPERACIONES: CHOFER',
                mensaje: 'Estimado Conductor sus datos fueron ingresados correctamente al sistema '
            }),
            type: "POST",
            cache: false,
            async: true,
            contentType: "application/json;charset=UTF-8",
            datatype: "json",
            success: function (data) {
                if (data == "Success") {
                    alert('Correo enviado');
                }
                else {
                    alert(data);
                }
            },
            error: function (request, status, error) {
                if (request.status == 500) {

                    alert(error);
                }
                if (request.status == 401) {
                    document.location.href = CmpGlobalVariableUrl401;
                }
            }
        });
    }

    function grabarConductor() {

        $.ajax({
        url: '@Url.Action("Grabar", "Conductor")',
        data: JSON.stringify({
            id: $("#txtId").val(),
            dni_conductor: $("#txtDni").val(),
            des_nombres: $("#txtNombres").val(),
            des_apellido: $("#txtApellidos").val(),
            fecha_ingreso: $("#txtFecIngreso").val(),
            categoria_licencia: $("#txtCategoria").val(),
            nro_licencia: $("#txtNroLicencia").val(),
            tx_estado: $("#txtEstado").val(),
            direccion: $("#txtDireccion").val()
        }),
        type: "POST",
        cache: false,
        async: true,
        contentType: "application/json;charset=UTF-8",
        datatype: "json",
        success: function (data) {
            if (data == "Success") {
                //listarBuses();
                //limpiar();
                document.location.href = '@Url.Action("Index", "Conductor")';
            }
            else {
                alert(data);
            }
        },
        error: function (request, status, error) {
            if (request.status == 500) {

                alert(error);
            }
            if (request.status == 401) {
                document.location.href = CmpGlobalVariableUrl401;
            }
        }
    });
    }

    function limpiar() {
        $("#txtId").val('');
        $("#txtDni").val('');
        $("#txtNombres").val('');
        $("#txtApellidos").val('');
        $("#txtFecIngreso").val('');
        $("#txtCategoria").val('');
        $("#txtNroLicencia").val('');
        $("#txtEstado").val('');
        $("#txtDireccion").val('');
    }

</script>