@model WebOperaciones.Models.UsuarioModel

@{
    ViewBag.Title = "Usuario";
}

<div class="container" style="margin-top: 135px;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Conductores", "Index", "Conductor", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Buses", "Index", "Bus", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Producción", "Index", "Produccion", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
</div>
<!-- cuerpo -->
<div class="container">
    <div class="row" style="margin-top: 25px;">
        <div class="col-lg-12">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Crear Usuarios</a>
                    <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Listar Usuarios</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                @if (@Model.Respuesta != "")
                {
                    <div class="alert alert-success alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Correcto!</strong> @Model.Respuesta
                    </div>
                }
                @if (@Model.Error != "")
                {
                    <div class="alert alert-danger alert-dismissible">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>¡Error!</strong> @Model.Error
                    </div>
                }
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    <form style="margin-top: 40px;">
                        <div class="form-row">
                           <div class="form-group col-md-2">
                                <label for="inputEmail4">Id</label>
                                <input type="number" class="form-control" id="txtId" placeholder="" value="@Model.Usuario.Dni">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputEmail4">Dni</label>
                                <input type="number" class="form-control" id="txtDni" placeholder="" value="@Model.Usuario.Dni">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Nombres</label>
                                <input type="text" class="form-control" id="txtNombres" placeholder="" value="@Model.Usuario.Nombre">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Apellidos</label>
                                <input type="text" class="form-control" id="txtApellidos" placeholder="" value="@Model.Usuario.Apellido">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Email</label>
                                <input type="email" class="form-control" id="txtEmail" placeholder="" value="@Model.Usuario.Email">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Login</label>
                                <input type="text" class="form-control" id="txtLogin" placeholder="" value="@Model.Usuario.UsuLogin">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Contraseña</label>
                                <input type="text" class="form-control" id="txtContrasena" placeholder="" value="@Model.Usuario.ContraLogin">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Estado</label>
                                <input type="text" class="form-control" id="txtEstado" placeholder="" value="@Model.Usuario.Estado">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <input type="button" class="btn btn-danger btn-block" id="btnLimpiar" value="Limpiar" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" class="btn btn-primary btn-block" id="btnAceptar" value="Aceptar" />
                            </div>
                            <div class="col-md-4">
                                <input type="button" class="btn btn-warning btn-block" id="btnEnviarCorreo" value="Enviar Correo" />
                            </div>
                        </div>
                    </form>

                </div>
                <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                    @Html.Partial("ListaPartial", Model.Usuarios)
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        listarUsuarios();
    });
    $("#btnLimpiar").click(function () {
        limpiar();
    });

    $("#btnAceptar").click(function () {
        grabarUsuario();
    });

    $("#btnEnviarCorreo").click(function () {
        enviarCorreo();
    });

    function listarUsuarios() {
        $.ajax({
            type: "GET",
            url: '@Url.Action("ListarDataList", "Usuario")',
            data: {},
            contentType: "application/json;charset=UTF-8",
            datatype: "json",
            async: true,
            traditional: true,
            success: function (data) {
                $("#IndexPartialDiv").html("");
                $("#IndexPartialDiv").html(data);
            },
            error: function (request, status, error) {
                if (request.status == 401) {
                    document.location.href = parameterData.urlError;
                }
                if (request.status == 500) {

                    alert(error);
                }
                if (request.status == 401) {
                    document.location.href = CmpGlobalVariableUrl401;
                }
            }
        });
    }

    function grabarUsuario() {

        $.ajax({
        url: '@Url.Action("Grabar", "Usuario")',
        data: JSON.stringify({
            id: $("#txtId").val(),
            dni: $("#txtDni").val(),
            nombre: $("#txtNombres").val(),
            apellidos: $("#txtApellidos").val(),
            email: $("#txtEmail").val(),
            login: $("#txtLogin").val(),
            contrasenia: $("#txtContrasena").val(),
            estado: $("#txtEstado").val(),
        }),
        type: "POST",
        cache: false,
        async: true,
        contentType: "application/json;charset=UTF-8",
        datatype: "json",
        success: function (data) {
            if (data == "Success") {
                //listarBuses();
                //limpiar();
                document.location.href = '@Url.Action("Index", "Usuario")';
            }
            else {
                alert(data);
            }
        },
        error: function (request, status, error) {
            if (request.status == 500) {

                alert(error);
            }
            if (request.status == 401) {
                document.location.href = CmpGlobalVariableUrl401;
            }
        }
    });
    }

    function enviarCorreo() {

        $.ajax({
            url: '@Url.Action("EnviarCorreo", "Bus")',
            data: JSON.stringify({
                correo: 'miriandvs@gmail.com',
                asunto: 'WEB OPERACIONES: CHOFER',
                mensaje: 'Estimado(a) usuario su cuenta ha sido creada satisfactoriamente. Se adjunta sus credenciales de acceso. Usuario : mvilladeza , Clave : 12345'
            }),
            type: "POST",
            cache: false,
            async: true,
            contentType: "application/json;charset=UTF-8",
            datatype: "json",
            success: function (data) {
                if (data == "Success") {
                    alert('Correo enviado para el acceso al sistema');
                }
                else {
                    alert(data);
                }
            },
            error: function (request, status, error) {
                if (request.status == 500) {

                    alert(error);
                }
                if (request.status == 401) {
                    document.location.href = CmpGlobalVariableUrl401;
                }
            }
        });
    }

    function limpiar() {
        $("#txtId").val('');
        $("#txtPlaca").val('');
        $("#txtClase").val('');
        $("#txtMarca").val('');
        $("#txtModelo").val('');
        $("#txtColor").val('');
        $("#txtMotor").val('');
        $("#txtAsientos").val('');
        $("#txtPuertas").val('');
        $("#txtFecInscripcion").val('');
        $("#txtAnio").val('');
        $("#txtEstado").val('');
    }

</script>